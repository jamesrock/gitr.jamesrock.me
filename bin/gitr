#!/bin/bash

case $1 in
	"branch")

		# gitr branch master dev
		gitr checkout $2;git checkout -b $3;git push -u origin $3;

	;;
	"unbranch")

		# gitr unbranch dev
		git branch -D $2;git push origin :$2;

	;;
	"branches")

		# gitr branches
		git branch -a;

	;;
	"merge")

		# gitr merge dev master
		gitr checkout $3;git merge origin/$2;

	;;
	"discard")

		# gitr discard js/app.js
		# gitr discard

		if [ "$2" ]
			then
				git checkout -- $2;
			else
				git checkout -- .;
		fi

	;;
	"revert")

		if [ "$3" ]
			then
				# gitr revert js/app.js kdh3ekjh2...
				git checkout $3 -- $2;
			else
				# gitr revert kdh3ekjh2...
				git checkout $2 -- .;
		fi

	;;
	"commit")

		# gitr commit "message"
		git add -A;git commit -m "$2";

	;;
	"commits")

		git log;

	;;
	"update")

		git remote update --prune origin;

	;;
	"status")

		git status;

	;;
	"push")

		git push;

	;;
	"pull")

		git pull;

	;;
	"checkout")

		git checkout $2;git pull;

	;;
	"help")

		echo "see gitr.jamesrock.me";

	;;
	*)

		echo "sorry?";

	;;
esac
