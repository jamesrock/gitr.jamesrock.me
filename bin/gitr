#!/bin/bash

case $1 in
	"branch")

		# gitr branch develop
		git checkout -b $2;git push -u origin $2;

	;;
	"unbranch")

		# gitr unbranch develop
		git branch -D $2;git push origin :$2;

	;;
	"branches")

		# gitr branches
		git branch -a;

	;;
	"merge")

		# gitr merge develop
		git merge $2;

	;;
	"discard")

		if [ "$2" ]
			then
				# gitr discard js/app.js
				git checkout -- $2;
			else
				# gitr discard
				git checkout -- .;
		fi

	;;
	"revert")

		if [ "$3" ]
			then
				# gitr revert js/app.js kdh3ekjh2...
				git checkout $3 -- $2;
			else
				# gitr revert kdh3ekjh2...
				git checkout $2 -- .;
		fi

	;;
	"add")

		if [ "$2" ]
			then
				# gitr add js/app.js
				git add $2;
			else
				# gitr add
				git add -A;
		fi

	;;
	"remove")

		# gitr remove js/app.js
		git rm $2;

	;;
	"commit")

		# gitr commit "message"
		gitr add;git commit -m "$2";

	;;
	"commits")

		# gitr commits
		git log;

	;;
	"update")

		# gitr update
		git remote update --prune origin;

	;;
	"status")

		# gitr status
		git status;

	;;
	"push")

		# gitr push
		git push;

	;;
	"pull")

		# gitr pull
		git pull;

	;;
	"checkout")

		# gitr checkout
		git checkout $2;git pull;

	;;
	"help")

		# gitr help
		echo "see gitr.jamesrock.me";

	;;
	*)

		echo "sorry?";

	;;
esac
